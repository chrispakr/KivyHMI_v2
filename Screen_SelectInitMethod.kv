#:import utils kivy.utils

<BigButton@Button>:
    size_hint: [None, None]
    size: [600,100]
    background_color: (0,1,0,0)
    font_name: "StdFont"
    font_size: 24
    color: utils.get_color_from_hex("#858585")
    canvas.before:
        Color:
            rgb: (utils.get_color_from_hex("#151515") if self.state == "normal" else utils.get_color_from_hex("#3b3b3b"))
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [8,]
        Color:
            rgb: utils.get_color_from_hex("#858585")
        Line:
            width: 1.05
            rounded_rectangle: self.x, self.y, self.width, self.height, 8, 50


<SelectFilmInitMethod>:
    on_enter:
        app.curScreenName = "Please Select"
    canvas.before:
        Color:
            rgb: utils.get_color_from_hex("#3b3b3b")
        Rectangle:
            pos: self.pos
            size: self.size

    BigButton:
        text: "LOAD FILM (NO FILM IS INSERT)"
        pos_hint: {"center_x": 0.5, "center_y": 0.63}

        on_press:
            app.sendMoveCommand(50)
            app.screenForward("screenLoadFilm")

    BigButton:
        text: "INIT FILM (FILM IS LOADED)"
        pos_hint: {"center_x": 0.5, "center_y": 0.37}
        on_release:
            app.sendMoveCommand(60)
            app.screenForward("screenInitFilm")