
<FilmTransportControl>:
    GridLayout:
        rows: 5
        cols: 1
        minimum_height: 40
        BoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: 40
            Image:
                size: 706, 40
                keep_ratio: True
                width: root.width
                source: "pictures/header/header_filmControl.png"

        BoxLayout:
            orientation: "horizontal"
            spacing: 10
            padding: 10,10,10,10
            size_hint_y: None
            height: 85
            IconButtonToggle:
                imageSource: "pictures/icons/icon_light.png"
                on_press: app.toggleLight(self)
                state: "down" if app.curLedColor > 0 else "normal"
            IconButtonToggle:
                imageSource: "pictures/icons/icon_selectColor.png"
                on_press: app.toggleLedColor(self)
            DhButton:
                imageSource: "pictures/icons/icon_arrowDown.png"
                arrowAngle: app.btnDhArrowAngle
                text: app.dhButtonText
                on_press: app.toggleDownHolder()
            IconButton:
                imageSource: "pictures/icons/icon_hand.png"
#                disabled: app.disable_btnFreeRun
                on_press: app.show_screen_toggle_freerun()
            IconButton:
                imageSource: "pictures/icons/icon_epo.png"
                on_press: app.curBaseScreen = "screenInitHmi"

        SmFilmMoveCenter:
            id: smFilmTransportCenterID
            size_hint_y: None
            height: 210
            current: app.curFilmTransportCenterScreen

        SmFilmMoveBottom:
            id: smFilmMoveBottomID
            size_hint_y: None
            height: 145
            current: app.curFilmTransportBottomScreen


<CameraControl>:
    BoxLayout:
        Label:
            text: "Page CameraControl"

<ProjectControl>:
    BoxLayout:
        Label:
            text: "Page ProjectControl"

<ScreenSettings>:
    BoxLayout:
        Label:
            text: "Page Settings"