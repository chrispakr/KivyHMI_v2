#:import utils kivy.utils
#:include Screen_ManualControl.kv
#:include Screen_SelectInitMethod.kv
#:include Screen_LoadFilm.kv
#:include Screen_InitFilm.kv
#:include Screen_HomeScreen.kv


<StatusLed@RelativeLayout>:
    connStatus: 0
    size_hint: None, None
    width: 18
    height: 10
    canvas:
        Color:
            rgb: utils.get_color_from_hex("#ff0000") if self.connStatus == 0 else utils.get_color_from_hex("#ff9000") if self.connStatus == 1 else utils.get_color_from_hex("#22f400") if self.connStatus == 3 else utils.get_color_from_hex("#22f400")
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [3]


<ToolBar@RelativeLayout>:
    orientation: 'lr-tb'
    size_hint_y: None
    height: 46
    #pos_hint: {'top': 1, 'y': 0}

    canvas.before:
        Color:
            rgb: utils.get_color_from_hex("#151515")
        Rectangle:
            pos: 0,0
            size: self.size
        Color:
            rgb: utils.get_color_from_hex("#858585")
        Line:
            width: 1.0
            rectangle: 0, 0, 800, 0.5
        Line:
            width: 1.0
            rectangle: 640, 0, 0.5, 46


<ToolButton@Button>:
    size_hint_x: None
    background_color: (0,1,0,0)
    color: utils.get_color_from_hex("#151515")
    align: 'center'
    canvas.before:
        Color:
            rgb: utils.get_color_from_hex("#858585")
        Rectangle:
            pos: self.pos
            size: self.size


<OwnLabel@Label>:
    size_hint_x: None
    font_name: "StdFont"
    font_size: 16
    color: utils.get_color_from_hex("#858585")

<BaseScreen>:
    rows: 2
    cols: 1
    size_hint: 1, 1

    ToolBar:
        ToolButton:
            text: '<'
            width: 48
            on_press: app.screenBackward("screenHome")

        OwnLabel:
            x: 60
            text: "MAINVIEW"


        OwnLabel:
            x: 655
            y: 0
            text: "CONNECTED"
        
        StatusLed:
            x: 383
            y: 9
            connStatus: app.connStatus

    ScreenSwitcher:
        id: screenSwitcher #Put an ID to your ScreenManager class