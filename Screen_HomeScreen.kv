<MainMenuButton@ToggleButton>:
    size_hint: None,None
    imageSource: None
    size: [86, 120]
    background_normal: ""
    background_down: ""
    background_color: app.baseGreyDark
    background_down:
    font_name: "StdFont"
    font_size: 16
    border: 0,0,0,0
    canvas.before:
        Color:
            rgb: app.baseGreyDark
        Line:
            rectangle: self.x, self.y, self.width, self.height
        Color:
            rgb: app.baseGreyDark
    Image:
        center_x: self.parent.center_x
        center_y: self.parent.center_y
        source: root.imageSource
        color: app.baseWhite if root.state == "normal" else app.baseColor
        size: 50, 50


<MainMenuBox@RelativeLayout>:
    rectPos: app.mainMenuRectPosition
    size_hint: None, None
    size: 8, 480
    canvas:
        Color:
            rgb: app.baseColor
        Rectangle:
            pos: 0, app.mainMenuRectPosition
            size: (8,120)


<FullScreenHmiMenu>:
    GridLayout:
        cols: 2
        BoxLayout:
            orientation: 'horizontal'
            size_hint_x: None
            width: 94
            MainMenuBox:
            BoxLayout:
                orientation: 'vertical'
                MainMenuButton:
                    id: MmFilmControl
                    imageSource: "pictures/icons/icon_film.png"
                    group: "MainMenu"
                    state: "down"
                    on_press: app.mainMenuControl(0)

                MainMenuButton:
                    id: MmCameras
                    imageSource: "pictures/icons/icon_camera.png"
                    group: "MainMenu"
                    on_press: app.mainMenuControl(1)

                MainMenuButton:
                    id: MmProjects
                    imageSource: "pictures/icons/icon_list.png"
                    group: "MainMenu"
                    on_press: app.mainMenuControl(2)

                MainMenuButton:
                    id: MmSettings
                    imageSource: "pictures/icons/icon_settings.png"
                    group: "MainMenu"
                    on_press: app.mainMenuControl(3)

        SmMainScreen:
            id: smMainMenu #Put an ID to your ScreenManager class
            direction: "down"
            current: app.curMainScreen

