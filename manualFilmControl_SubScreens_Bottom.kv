<ScreenEnableFreeRun>:
    BoxLayout:
        orientation: "vertical"

        BoxLayout:
            orientation: "horizontal"
            spacing: 10
            padding: 10
            padding: 10,10,10,5
            size_hint_y: None
            height: 65
            InfoTextLabel:
                text: "DO YOU WANT TO ENABLE HAND OPERATION MODE ?"

        BoxLayout:
            orientation: "horizontal"
            spacing: 10
            padding: 10,5,10,10
            size_hint_y: None
            height: 80
            FilledButton:
                btnText: "NO"
                on_press: app.cancel_freerun()
            Label:
            FilledButton:
                btnText: "YES"
                on_press: app.enable_freerun()

<ScreenFreeRunEnabled>:
    BoxLayout:
        orientation: "vertical"

        BoxLayout:
            orientation: "horizontal"
            spacing: 10
            padding: 10
            padding: 10,10,10,5
            size_hint_y: None
            height: 65
            InfoTextLabel:
                text: "MACHINE IS IN HAND OPERATION MODE"

        BoxLayout:
            orientation: "horizontal"
            spacing: 10
            padding: 10,5,10,10
            size_hint_y: None
            height: 80
            CancelFreeRunButton:
                on_press: app.disable_freerun()