#:import utils kivy.utils
#:import getHexCol kivy.utils.get_color_from_hex

<ScreenInitFilm>:
    on_enter:
        #app.sendMoveCommand(60)
        root.start_init_film()
    on_leave:
        #app.sendMoveCommand(0)
        root.stop_init_film()
    canvas.before:
        Color:
            rgb: getHexCol("#3b3b3b")
        Rectangle:
            pos: self.pos
            size: self.size
    
    RelativeLayout:
        size_hint: None, None
        pos_hint: {'center_x': .5, 'center_y': .5}
        size: 400, 200 
        canvas:
            Color:
                rgb: getHexCol("#151515")
            RoundedRectangle:
                size: self.size
                radius: [10,]
            Color:
                rgb: getHexCol("#858585")
            Line:
                width: 1.05
                rounded_rectangle: 0, 0, self.width, self.height, 10, 50
            Line:
                width: 1.05
                points: [0,160,400,160]

        Label:
            y: 80
            font_size: 16
            text: "Initializing Film"

        AsyncImage:
            source: "pictures/Spinner.gif"
            anim_delay: 1/30
            y: -20

            